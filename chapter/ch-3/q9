import heapq
import math

def k_closest_points(points, k):
    points.sort(key=lambda point: point[0]**2 + point[1]**2)
    return points[:k]

# Test Cases
print(k_closest_points([[1, 3], [-2, 2], [5, 8], [0, 1]], 2))  # Output: [[-2, 2], [0, 1]]
print(k_closest_points([[1, 3], [-2, 2]], 1))  # Output: [[-2, 2]]
print(k_closest_points([[3, 3], [5, -1], [-2, 4]], 2))  # Output: [[3, 3], [-2, 4]]
